---
pagination:
  data: collections.years
  size: 1
  alias: thisYear
permalink: "{{ thisYear.year }}/index.html"
eleventyComputed:
  title: "{{ thisYear.year }}"
layout: 'layout.njk'
---
{%- set year = thisYear.year -%}
{%- for monthData in thisYear.monthlyPosts -%}
  {%- set month = monthData.month -%}
  {%- set posts = monthData.posts -%}
  {% timeTagForMonth year, month %}
  <ul class="posts">
    {%- for post in posts -%}
      <li><a href="{{ post.url }}">{{ post.data.title }}</a> {% timeTagForDate post.date, 'short' %}</li>
    {%- endfor -%}
  </ul>
{%- endfor -%}
