---
pagination:
  data: collections.months
  size: 1
  alias: thisMonth
permalink: "{{ thisMonth.year }}/{{ thisMonth.month | monthIndexToNumeric }}/index.html"
eleventyComputed:
  title: "{{ thisMonth.month | monthIndexToName }} {{ thisMonth.year }}"
layout: layout.njk
---
{%- for post in thisMonth.posts -%}
  <article class="main__post post">
    <h2 class="post__title">{% linkToPost post %}</h2>
    <div class="post-meta">
      {% timeTagForDate post.date, "long", "post-meta__date" %}
      {% tagList post.data.tags | except("blog"), "post-meta__tag-list" %}
    </div>
    {{ post.templateContent | safe }}
  </article>
{%- endfor -%}
